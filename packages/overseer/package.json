{
  "name": "overseer",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn build:contract && yarn build:contract-types && nest build",
    "build:contract-types": "npx typechain --target ethers-v5 --out-dir ./src/contracts/types/ './src/contracts/artifacts/contracts/**/*[!dbg].json'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main | pino-sentry --level error",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test:setup && jest --passWithNoTests --config ./test/jest-e2e.json --forceExit",
    "deploy:local": "npx hardhat run --network localhost src/contracts/scripts/deploy.js",
    "build:contract": "npx hardhat compile",
    "run:blockchain": "npx hardhat node",
    "run:testnet": "yarn build:contract && yarn concurrently \"yarn run:blockchain\" \"wait-on tcp:8545 && yarn deploy:local\"",
    "test:setup": "yarn build:contract && yarn build:contract-types && (yarn run:blockchain&) && yarn deploy:local"
  },
  "dependencies": {
    "@nestjs/common": "8.0.0",
    "@nestjs/core": "8.0.0",
    "@nestjs/platform-express": "8.0.0",
    "ethers": "5.6.4",
    "nestjs-pino": "2.5.2",
    "pino-http": "7.0.0",
    "pino-sentry": "0.11.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0"
  },
  "devDependencies": {
    "@leocode/eslint-config": "2.0.0",
    "@nestjs/cli": "8.0.0",
    "@nestjs/schematics": "8.0.0",
    "@nestjs/testing": "8.0.0",
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.31",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "concurrently": "^7.1.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "hardhat": "2.9.3",
    "jest": "27.5.1",
    "supertest": "6.1.3",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.3",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.1",
    "typechain": "8.0.0",
    "typescript": "4.6.4",
    "wait-on": "^6.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
