{
  "name": "greenproof-sdk",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/merkle-tree",
      "packages/voting-contract",
      "packages/voting-manager",
      "packages/worker",
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "yarn workspaces run build",
    "test:unit": "yarn workspaces run test:unit",
    "test:e2e": "yarn workspaces run test:e2e",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "start:dev": "yarn workspaces run start:dev",
    "purge": "yarn purge:node_modules && yarn purge:dist",
    "purge:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "purge:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "release": "yarn build && yarn multi-semantic-release --no-ci --dry-run",
    "release:ci": "yarn build && yarn multi-semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@qiwi/multi-semantic-release": "6.3.0",
    "husky": "8.0.1"
  }
}
